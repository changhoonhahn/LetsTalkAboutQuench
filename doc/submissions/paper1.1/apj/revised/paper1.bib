  author = {Somerville, Rachel S. and Primack, Joel R. and Faber, S. M.},
  month = feb,
  year = {2001},
  keywords = {cosmology: theory,galaxies: evolution,galaxies: formation,galaxies: high-redshift,galaxies: general,galaxies: starburst},
